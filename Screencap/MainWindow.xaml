<Window x:Class="Screencap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Screencap"
        mc:Ignorable="d"
        Title="Screencap" Height="350" Width="525">
    <Grid>
        <Button x:Name="FullscreenButton" Content="Fullscreen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="FullscreenButton_Click"/>
        <Button x:Name="RegionButton" Content="Region" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="RegionButton_Click"/>
        <Button x:Name="WindowButton" Content="Window" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Width="75" Click="WindowButton_Click"/>

    </Grid>
</Window>
